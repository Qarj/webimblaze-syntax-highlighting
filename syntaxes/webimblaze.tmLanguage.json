{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "WebImblaze",
    "patterns": [
        {
            "include": "#keywords"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#block-comments"
        },
        {
            "include": "#single-line-comment"
        },
        {
            "include": "#variables"
        }
    ],
    "repository": {
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.info.webimblaze",
                    "match": "^(step|desc|section|url)\\b"
                },
                {
                    "name": "keyword.control.webimblaze",
                    "match": "^(autoretry|echo|getallhrefs|getallsrcs|formatjson|sleep|retry|url|postbody|posttype|method)\\b"
                },
                {
                    "name": "invalid.illegal.warning.webimblaze",
                    "match": "^(ignoresmartassertions)\\b"
                },
                {
                    "name": "storage.webimblaze",
                    "match": "^(var)[^:]*"
                },
                {
                    "name": "support.type.exception.webimblaze",
                    "match": "^(assertcount|verifypositive|verifynegative|verifyresponsecode)[^:]*"
                },
                {
                    "name": "variable.webimblaze",
                    "match": "^(parseresponse|parsematch)[^:]*"
                }
            ]
        },
        "strings": {
            "name": "string.triple.angle.webimblaze",
            "begin": "<<<",
            "end": ">>>"
        },
        "block-comments": {
            "name": "comment.block.webimblaze",
            "begin": "--=",
            "end": "=--"
        },
        "single-line-comment": {
            "name": "comment.single.webimblaze",
            "match": "(#).*$\\n?"
        },
        "variables": {
            "name": "storage.webimblaze",
            "begin": "{",
            "end": "}"
        }
    },
    "scopeName": "source.webimblaze"
}
